<catel:Window x:Class="Freengy.FriendList.Views.AddNewFriendWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              
              xmlns:catel="http://schemas.catelproject.com"
              
              xmlns:local="clr-namespace:Freengy.FriendList.Views"
              xmlns:viewModels="clr-namespace:Freengy.FriendList.ViewModels"
              xmlns:models="clr-namespace:Freengy.Common.Models;assembly=Freengy.Common"
              xmlns:controls="clr-namespace:Freengy.CommonResources.Controls;assembly=Freengy.CommonResources"

              mc:Ignorable="d" 
              Height="400"
              Width="600"
              Title="Add new friend"
              KeyDown="AddNewFriendWindow_OnKeyDown"
              WindowStartupLocation="CenterOwner"
              d:DesignHeight="450" d:DesignWidth="800"
              Style="{StaticResource CommonWindowStyle}"
              Background="{StaticResource LightGrayBrush}"
              d:DataContext="{d:DesignInstance viewModels:AddNewFriendViewModel}">

    <catel:Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Freengy.CommonResources;component/Styles/StylishWindowStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Freengy.CommonResources;component/Styles/CommonResourcesHub.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:Window.Resources>

    <DockPanel>
        <DockPanel Margin="10">
            <!-- Search users name filter -->
            <controls:Filter DockPanel.Dock="Top" WatermarkText="Search for new awesome friends!" 
                             FilterText="{Binding Path=SearchFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock DockPanel.Dock="Top" Text="Input some user name"
                       Visibility="{Binding Path=FoundUsers.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Found users list -->
            <ItemsControl DockPanel.Dock="Top" ItemsSource="{Binding Path=FoundUsers}" Margin="0, 10, 0, 0"
                          Visibility="{Binding Path=FoundUsers.IsEmpty, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:UserAccount">
                        <DockPanel Background="{StaticResource FirstMainBrush}" Margin="4">
                            <DockPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Let's be friends!"/>
                                    <MenuItem Header="Ban this faggot!"/>
                                </ContextMenu>
                            </DockPanel.ContextMenu>

                            <TextBlock DockPanel.Dock="Left" Text="{Binding Path=Name}"/>
                            <TextBlock DockPanel.Dock="Left" Foreground="{StaticResource PurpleBrush}">
                                <Run Text="Level"/>
                                <Run Text="{Binding Path=Level}"/>
                            </TextBlock>
                            <TextBlock DockPanel.Dock="Left">
                                <Run Text="("/>
                                <Run Text="{Binding Path=Privilege}"/>
                                <Run Text=")"/>
                            </TextBlock>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
    </DockPanel>
</catel:Window>