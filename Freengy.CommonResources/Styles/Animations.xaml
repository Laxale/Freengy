<ResourceDictionary x:Class="Freengy.CommonResources.Styles.Animations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard Storyboard.TargetProperty="Margin" x:Key="SideSlidingAnimation">
        <ThicknessAnimation From="100, 0, 0, 0" To="4, 0, 0, 0" By="1" BeginTime="0" Duration="0:0:2">
            <ThicknessAnimation.EasingFunction>
                <BounceEase Bounces="3"/>
            </ThicknessAnimation.EasingFunction>
        </ThicknessAnimation>

        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0" Duration="0:0:2"/>
    </Storyboard>
</ResourceDictionary>